{
	"compilerOptions": {
	  "outDir": "lib",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"experimentalDecorators": false,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"skipLibCheck": true,
	    "allowImportingTsExtensions": true,

		/* Bundler mode */
		"moduleResolution": "NodeNext",
	  	"declaration": true,

		/* Linting */
		"strict": true,
		"noFallthroughCasesInSwitch": true,
	},
	"include": ["src"]
}
